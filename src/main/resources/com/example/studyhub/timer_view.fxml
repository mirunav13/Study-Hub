<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studyhub.PomodoroController">
    <children>
        <VBox alignment="TOP_RIGHT" spacing="5.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label fx:id="levelLabel" text="Level: 1" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="xpLabel" text="XP: 0 / 100" textFill="#757575">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ProgressBar fx:id="levelProgressBar" prefHeight="15.0" prefWidth="300.0" progress="0.0" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="inputMinute" prefWidth="130.0" promptText="Minutes (e.g. 25)" />
                        <Button mnemonicParsing="false" onAction="#setTime" text="Set Time" />
                    </children>
                </HBox>
                <Label fx:id="timerLabel" text="25:00">
                    <font>
                        <Font name="System Bold" size="72.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#startTimer" prefWidth="80.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Start">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#pauseTimer" prefWidth="80.0" style="-fx-background-color: #FFC107;" text="Pause">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#resetTimer" prefWidth="80.0" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Reset">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>